@model Hotel.Models.Reservation
@{
    ViewBag.Title = "Home Page";
}

<section class="banner" id="home-banner">
    <div class="container home-banner__container">
        <div class="banner-text">
            <h1 class="banner-title">Вітаємо в Східниці</h1>
            <hr class="banner-title-divider">
            <h2 class="banner-subtitle">Оздоровчий Комплекс Зелений Бір!<br/>
                Відпочинок для тих хто цінить магію природи!
            </h2>
        </div>
        <div class="banner-actions">
            <a href="about" class="button-green">
                Детальніше
            </a>
            <a href="Reservation" class="button-black">
                Бронювання
            </a>
        </div>
        @using (Html.BeginForm("Reservation", "Home", FormMethod.Get, new { @class = "home-reservation" }))
        {
            @Html.Hidden("indexStartDate")
            @Html.Hidden("indexEndDate")
            @Html.Hidden("GuestCount", 1)
            <button id="home-reservation__submit">Бронювання</button>
            <div class="home-reservation__inputs-container">
                <div class="home-reservation__input-wrapper">
                    <label class="home-reservation__input-label">
                        Заїзд
                        <span class="arrival-date-wrapper">
                            <span id="arrival-day" class="home-reservation__number"></span>
                            <span id="arrival-month"></span>
                        </span>
                        <input id="arrival-date" name="arrival-date" class="home-reservation__input">
                    </label>
                </div>
                <div class="home-reservation__input-wrapper">
                    <label class="home-reservation__input-label">
                        Виїзд
                        <span class="arrival-date-wrapper">
                            <span id="departure-day" class="home-reservation__number"></span>
                            <span id="departure-month"></span>
                        </span>
                        <input id="departure-date" class="home-reservation__input">
                    </label>
                </div>
                <div class="home-reservation__input-wrapper">
                    <label class="home-reservation__input-label">
                        Гостей
                        <span class="arrival-date-wrapper">
                            <input id="home-reservation__amount" type="number" value="1" min="1" max="10">
                        </span>
                    </label>
                </div>
                <div class="home-reservation__input-wrapper">
                    <label class="home-reservation__input-label">
                        Ночей
                        <span class="arrival-date-wrapper">
                            <span id="home-reservation-nights" class="home-reservation__number"></span>
                        </span>
                    </label>
                </div>
            </div>
        }
        <a class="banner-details">
            Прокрутіть униз для деталей
        </a>
    </div>
</section>
<section id="home-gallery" class="home-gallery">
    <div class="container home-gallery__container">
        <div class="home-gallery__text-wrapper">
            <h4 class="main-title">Про послуги</h4>
            <p class="main-text home-gallery__text">
                Ми даруемо людям незабутній відпочинок, в збагаченій цілющим повітрям та мінеральними водами Східниці.<br/>
                Уютні номери, в поєднанні з домашнім та теплим обслуговуванням, подарують вам душевний спокій.<br />
                Дієтичне харчування з екологічно чистих продуктів, додасть свій оздоровчий ефект до всіх лікувальних процедур, які ми пропонуємо своїм гостям. Тому що не секрет, що правильне збалансоване харчування-це запорука здорового способу життя.<br />
                Мальовничі краєвиди древніх, могутніх соснових лісів,які належать до національного парку "Сколівскі Бескиди", з якими межує наш готель, перенесуть вас в казку і вилікують від любої депресії та допоможуть вам відпочити від буденного ритму життя серед мертвих бетонних лісів.

            </p>
            <a href="Gallery" class="button-green home-gallery__btn">
                Детальніше
            </a>
        </div>
    </div>
    <div class="home-gallery__images-wrapper">
        <img class="home-gallery__img-big" src="~/Content/img/home/gallery-big.jpg" alt="">
        <div class="home-gallery__images-inner-container container">
            <img class="home-gallery__img-medium" src="~/Content/img/home/gallery-md.jpg" alt="">
            <img class="home-gallery__img-small" src="~/Content/img/home/gallery-sm-1.jpg" alt="">
            <img class="home-gallery__img-small home-gallery__img-small-2" src="~/Content/img/home/gallery-sm-2.jpg" alt="">
        </div>
    </div>
</section>
<section id="home-healing">
    <div class="container">
        <div id="home-healing-container">
            <div id="home-healing-container__images">
                <img class="home-healing-container__half-width" src="~/Content/img/home/healing-1.jpg" alt="">
                <img class="home-healing-container__half-width" src="~/Content/img/home/healing-2.jpg" alt="">
                <img class="home-healing-container__full-width" src="~/Content/img/home/healing-3.jpg" alt="">
            </div>
            <div id="home-healing-container__text-wrapper">
                <h4 class="home-healing-container__title main-title">Про лікувальні послуги</h4>
                <p class="home-healing-container__text main-text">
                    Сучасний медичний центр в поєднанні з природними мінеральними водами зможе вилікувати вас від майже любої недуги і прекрасно підійде для підтримання здоров*я вашого організму. Також не можна забувати і про перевірену часом та нашими з вами предками народної медицини, послуги якої також присутні в нашому готелі. Це процедури апітерапії-лікування продуктами бджоловодства.<br/>
                    Сучасний СПА центр з кваліфікованим лікарем-косметологом порадує своїми процедурами жінок. Лікар кінезіолог зможе вирішити любі проблеми опорно-рухової системи.

                </p>
                <a href="Healing" class="button-green home-healing__btn">
                    Детальніше
                </a>
            </div>
        </div>
    </div>
</section>
<section id="home-prices">
    <div class="container home-prices__wrapper">
        <div class="home-price">
            <p class="main-title home-price__title">Проживання</p>
            @*<p class="main-text home-price__text">Lorem Ipsum roin gravida nibh vel velit auctor aliquet. Aenean sollicitudin</p>*@
            <a href="Rooms" class="button-green prices__btn">
                Детальніше
            </a>
        </div>
        <aside class="home-prices__divider"></aside>
        <div class="home-price">
            <p class="main-title home-price__title">Лікування</p>
            @*<p class="main-text home-price__text">Lorem Ipsum roin gravida nibh vel velit auctor aliquet. Aenean sollicitudin</p>*@
            <a href="Healing" class="button-green prices__btn">
                Детальніше
            </a>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/Scripts/datepicker.min.js"></script>
    <script src="~/Scripts/i18n/datepicker.en.js"></script>
    <script src="~/Scripts/number.js"></script>
    <script src="~/Scripts/homepage.js"></script>
}
