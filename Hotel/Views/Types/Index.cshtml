@using Hotel.Helpers
@model IEnumerable<Hotel.Models.ApType>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/adminTable.css" rel="stylesheet" />
<section class="banner" id="contacts-banner">
    <div class="container contacts-banner__container">
        <div class="banner-text">
            <h1 class="banner-title">Керування типами номерів</h1>
            <hr class="banner-title-divider">
        </div>
    </div>
</section>
<section class="contacts-main">
    <div class="container">
        <div>
            @*<h2>Список Типів Номерів</h2>*@
            @*<p>
                    @Html.ActionLink("Додати тип", "Create")
                </p>*@
        </div>
        <div id="home-healing-container">
            <div class="container">
                <table class="responsive-table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OnePersonPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TwoPersonPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThreePersonPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FourPersonPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumOfPerson)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OnePersonPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TwoPersonPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThreePersonPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FourPersonPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumOfPerson)
                            </td>
                            <td>
                                @Html.ActionLink("Редагувати", "Edit", new { id = item.TypeId })
                                @*@Html.ActionLink("Детальніше", "Details", new { id = item.ApartmentId }) |*@
                                @*@Html.ActionLink("Видалити", "Delete", new { id = item.TypeId })*@
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</section>

